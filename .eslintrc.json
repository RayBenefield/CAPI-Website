{
    "env": {
        "jest": true
    },
    "extends": ["airbnb", "eslint:recommended", "plugin:react/recommended"],
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "globals": {
        "document": true
    },
    "rules": {
        "indent": ["error", 4],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.js*"]}],
        "react/jsx-indent": ["error", 4],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
